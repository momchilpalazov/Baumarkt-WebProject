@{
    ViewData["Title"] = "Admin Panel";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .custom-button {
        width: 100%;
        height: 150px;
        font-size: 20px;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 10px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Welcome to the Admin Area</h2>
            <p>This is the dashboard for administrators.</p>

        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-primary custom-button" asp-area="Admin" asp-controller="Product" asp-action="IndexAll">Home</a>
            @*<a class="btn btn-primary custom-button" href="/Home/IndexAll">Home</a>*@

        </div>
        <div class="col-md-6">
            <a class="btn btn-primary custom-button" asp-area="" asp-controller="Category" asp-action="AllCategory">Category</a>
        </div>
        <div class="col-md-6">
            <a class="btn btn-primary custom-button" asp-area="" asp-controller="ApplicationType" asp-action="AllApplicationType">ApplicationType</a>
        </div>
        <div class="col-md-6">
            <a class="btn btn-primary custom-button" asp-area="" asp-controller="Product" asp-action="AllProducts">Product</a>
        </div>
        <div class="col-md-6">
            <a class="btn btn-primary custom-button" asp-area="Identity" asp-page="/Account/Register">Create Admin User</a>
        </div>
        <div class="col-md-6">
            <a class="btn btn-primary custom-button" asp-area="" asp-controller="Inquiry" asp-action="Index">Inquiry</a>
        </div>
       

    </div>
</div>