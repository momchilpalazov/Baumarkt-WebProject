@using BaumarktSystem.Web.ViewModels.Home
@using System.Globalization
@model IEnumerable<ProductIndexViewModel>

@{
    ViewData["Title"] = "All Products";
}

<style>
    td.currency {
        white-space: nowrap;
    }
</style>

<div class="container mt-4">
    <h2 class="card-text mb-3">ALL PRODUCT</h2>
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Full Name</th>
                    <th>Short Description</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Application Type</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.FullName</td>
                        <td>@product.ShortProductDescription</td>
                        <td>@product.Description</td>
                        <td><img src="@product.ImageUrl" alt="Product Image" style="max-height: 100px;" /></td>
                        <td class="currency">@product.Price.ToString("C", new CultureInfo("eu-EU"))</td>
                        <td>@product.Category.Name</td>
                        <td>@product.ApplicationType.Name</td>
                        <td>
                            <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-link">Edit</a>
                            @* <a asp-action="DetailsProduct" asp-route-id="@product.Id" class="btn btn-link">Details</a> *@
                            <a asp-action="DeleteProduct" asp-route-id="@product.Id" class="btn btn-link">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There are no products available.</p>
    }

    <div class="text-center">
        <a asp-action="Create" class="btn btn-primary">Create New Product</a>
    </div>
</div>





    