@using BaumarktSystem.Web.ViewModels.ShoppingCart
@using System.Globalization
@using BaumarktSystem.Common
@model ShoppingCartSummaryView



<h2 class="card-text mb-3">YOUR SHOPPING BAG</h2>

<form method="post" asp-action="ShoppingCartSummaryPost">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="fullName">Full Name:</label>
                <input required type="text" class="form-control" id="fullName" name="ShoppingCartSummaryView.ApplicationUser.FullName" value="@Model.ApplicationUser.FullName" />
            </div>
            <div class="form-group">
                <label for="phoneNumber">Phone Number:</label>
                <input required type="text" class="form-control" id="phoneNumber" name="ShoppingCartSummaryView.ApplicationUser.PhoneNumber" value="@Model.ApplicationUser.PhoneNumber" />
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input required type="text" class="form-control" id="email" name="ShoppingCartSummaryView.ApplicationUser.Email" value="@Model.ApplicationUser.Email" />
            </div>
        </div>
        @if (User.IsInRole(GeneralApplicationConstants.roleAdmin))
        {
            <div class="col-md-6">
                <div class="form-group">
                    <label for="streetAddress">Street Address:</label>
                    <input type="text" class="form-control" id="streetAddress" name="ShoppingCartSummaryView.ApplicationUser.StreetAddress" value="@Model.ApplicationUser.StreetAddress" />
                </div>
                <div class="form-group">
                    <label for="city">City:</label>
                    <input type="text" class="form-control" id="city" name="ShoppingCartSummaryView.ApplicationUser.City" value="@Model.ApplicationUser.City" />
                </div>
                <div class="form-group">
                    <label for="postalCode">Postal Code:</label>
                    <input type="text" class="form-control" id="postalCode" name="ShoppingCartSummaryView.ApplicationUser.PostalCode" value="@Model.ApplicationUser.PostalCode" />
                </div>
                <div class="form-group">
                    <label for="state">State:</label>
                    <input type="text" class="form-control" id="state" name="ShoppingCartSummaryView.ApplicationUser.State" value="@Model.ApplicationUser.State" />
                </div>
            </div>
        }
    </div>
</form>



<h3>Cart Items</h3>
<a href="@Url.Action("GetCartProducts", "ShoppingCart")" class="btn btn-secondary">Back to Cart</a>

@if (Model.ProductsList != null && Model.ProductsList.Any())
{
    <form method="post" asp-action="ShoppingCartSummaryPost">
        <table class="table">
            <thead>
                <tr>
                    <th>FullName</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Short Description</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.ProductsList.Count(); i++)
                {
                    <input type="hidden" name="ShoppingCartSummaryView.ProductsList[@i].Id" value="@Model.ProductsList[i].Id" />
                    <input type="hidden" name="ShoppingCartSummaryView.ProductsList[@i].FullName" value="@Model.ProductsList[i].FullName" />

                    <tr>
                        <td>@Model.ProductsList[i].FullName</td>
                        <td>@Model.ProductsList[i].TempQuantity</td>
                        <td>@Model.ProductsList[i].Price.ToString("C", new CultureInfo("eu-EU"))</td>
                        <td>@Model.ProductsList[i].ShortProductDescription</td>
                        <td><img src="@Model.ProductsList[i].ImageUrl" width="100" /></td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Hidden fields for ApplicationUser properties -->
        <input type="hidden" name="ShoppingCartSummaryView.ApplicationUser.FullName" value="@Model.ApplicationUser.FullName" />
        <input type="hidden" name="ShoppingCartSummaryView.ApplicationUser.PhoneNumber" value="@Model.ApplicationUser.PhoneNumber" />
        <input type="hidden" name="ShoppingCartSummaryView.ApplicationUser.Email" value="@Model.ApplicationUser.Email" />

        <p>Total Price: @Model.ProductsList.Sum(p => p.Price*p.TempQuantity).ToString("C", new CultureInfo("eu-EU"))</p>

        <div class="button-group">

            @if (User.IsInRole(GeneralApplicationConstants.roleAdmin))
            {
                <button type="submit" class="btn btn-success" id="checkout-button">Proceed to Checkout</button>
            }
            else
            {
                <button type="submit" class="btn btn-primary">Proceed to Checkout</button>
            }

           
            <a href="@Url.Action("Index", "Home",new { area = "" }))" class="btn btn-secondary">Continue Shopping</a>
        </div>
    </form>
}
else
{
    <p>Your cart is empty.</p>
    <a href="@Url.Action("Index", "Home",new { area = "" }))" class="btn btn-primary">Continue Shopping</a>
}

@section Scripts {
    <script>
        // ...
    </script>
}


