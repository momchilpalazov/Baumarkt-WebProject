

<div class="border p-3 bg-white">
    <div class="d-flex justify-content-between mb-3">
        <h2 class="text-dark">INQUIRY LIST</h2>
    </div>

    <table id="tblData" class="table table-striped table-bordered pt-2" style="width:100%">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Details</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tblData').DataTable({
                "ajax": {
                    "url": "/Inquiry/GetInquiryList",
                    "dataSrc": "data"
                },
                "columns": [
                    { "data": "inquiryHedaer.id" },
                    { "data": "inquiryHedaer.fullName" },
                    { "data": "inquiryHedaer.phoneNumber" },
                    { "data": "inquiryHedaer.email" },
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            return '<a href="/Inquiry/Details/' + data.inquiryHedaer.id + '">Details</a>';
                        }
                    }
                ]
            });
        });
    </script>
}
