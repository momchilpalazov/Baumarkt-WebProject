@using BaumarktSystem.Web.ViewModels.Home
@model CategoryIndexViewModel

@{
    ViewData["Title"] = "Edit Category";
}


<form method="post" asp-action="DeleteCategoryById">
    <div class="border p-3">
        <h2 class="card-text    mb-3">DELETE CATEGORY</h2>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name">Category Name:</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShowOrder">Show Order:</label>
            <input asp-for="ShowOrder" class="form-control" />
            <span asp-validation-for="ShowOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col text-left">
                <button type="submit" class="btn btn-primary btn-danger ">Delete</button>
            </div>
            <div class="col text-right">
                <a asp-action="AllCategory" class="btn btn-primary"><i class="fas fa-sign-out-alt"></i> Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
